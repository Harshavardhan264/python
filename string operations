#string operations

str1='Hello'
str2='World!'
#concatenation
print(str1+str2)
#Repetition
print('str*3=',str1*3,str2)
#iteration
for i in 'HelloWorld!':
	print(i)


#slicing	
s="Amazing"
print(s)
print(s[1])
print(s[1:5])
print(s[-7:-3])
print(s[1:6:2])
print(s[1::2])
print(s[::-1])
print(s[::-2])

